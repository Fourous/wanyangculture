.skeleton-group-text {    
  padding: 30rpx 0rpx;
  /* width: 265; */
  float: left;
}

.skeleton-group-title {
  /* background-color: rgb(201, 201, 201); */
  width: 100%;
  height: 50rpx;
  margin-bottom: 10rpx;
  font-size: 15px;
}

.skeleton-group-desc:before, .skeleton-group-desc > view,
.skeleton-group-desc:after {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  /* background-color: rgb(201, 201, 201); */
  border-radius: 4rpx;
  font-size: 13px;
  color: #ccc;
}

.skeleton-group-desc:after {
  width: 80%;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ccc;
  background: white;
}

.tab-item {
  width: 50%;
  text-align: center;
  font-size: 15px;
  color: #ccc;
}

.swiper {
  height: 555px;
  background: #dfdfdf;
}

.on {
  color: red;
  border-bottom: 5rpx solid red;
}
