}

/*按钮*/

.loginBtnView {
  width: 100%;
  height: auto;
  background-color: #f2f2f2;
  margin-top: 80rpx;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {

  color: white;
  border-radius: 0px;
  background-color: rgb(13, 199, 199);
  font-size: 14px;
  width: 55%;
  height: 80rpx;
  line-height: 80rpx;
}
.wechatbtn {
  color: white;
  background-color: rgb(44, 172, 44);
  margin-top: 30rpx;
  border-radius: 0px;
  font-size: 14px;
  width: 55%;
