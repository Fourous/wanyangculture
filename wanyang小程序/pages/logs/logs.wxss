  /* border-bottom: 1px solid gray;  */
}

.line1 {
  width: 1px;
  height: 54px;
  background-color: #ccc;
  margin-top: 1px;
  position: relative;
  top: -30px;
  left: +89px;
}

.line {
  width: 100%;
